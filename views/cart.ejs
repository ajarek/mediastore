<%-include('./partials/header')%>
<%-include('./partials/navCart')%>
<div class=".container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% mycart.forEach(mc=>{%>
                <tr>
                    <td><%=mc.title%></td>
                    <td><img src="<%=mc.photo%>" alt="" class="img" width="40vw"></td>
                    <td class="fw-bold "><%=mc.price%><sup>00</sup> zł</td>
                    <td><a class="btn btn-danger" href="/delete/<%=mc._id%>">Delete</a></td>
                </tr>


                <%})%>
            </tbody>
        </table>

        <div class="row d-flex  justify-content-center">
            <h3 style="text-align: center;">Zamawiam i Płacę</h3>
            <a href="/deleteAll/"
                style="background:url('https://cdn.shoplo.com/7481/files/pay-pal.jpg?13');background-size: cover;height: 100px;width: 290px;"></a>

        </div>


    </div>
</div>
<%-include('./partials/footer')%>