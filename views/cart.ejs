<%-include('./partials/header')%>
<%-include('./partials/navCart')%>
<div class="container d-flex flex-column align-items-center w-100  ">
    <table class="table  table-responsive ">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th class="ps-5" scope="col">Image</th>
                <th scope="col">Price</th>
                <th class="ps-5" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% mycart.forEach(mc=>{%>
            <tr>
                <td><%=mc.title%></td>
                <td class="ps-5"><img src="<%=mc.photo%>" alt="" class="img" width="15%"></td>
                <td class="fw-bold w-25"><%=mc.price%><sup>00</sup> zł</td>
                <td class="ps-5 "><a class="btn btn-danger" href="/delete/<%=mc._id%>">Delete</a></td>
            </tr>


            <%})%>
        </tbody>
    </table>
    <div class="row d-flex flex-column justify-content-center" >
        <h3 style="text-align: center;">Zamawiam i Płacę</h3>
        <a href="/deleteAll/"   style="background:url('https://cdn.shoplo.com/7481/files/pay-pal.jpg?13');background-size: cover;height: 100px;width: 300px;" ></a>
       
    </div>

    

</div>

<%-include('./partials/footer')%>